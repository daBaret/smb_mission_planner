<?xml version="1.0"?>
<launch>
  <arg name="mission_file_path" default="$(find smb_mission_planner)/configs/missions/mission.yaml" />
  <arg name="config_file_path" default="$(find smb_mission_planner)/configs/robot/config.yaml" />

  <arg name="enable_viewer" default="false"/>

  <node pkg="smb_mission_planner" type="mission_planner_node.py" name="mission_planner_node" output="screen" args="$(arg mission_file_path)">
    <rosparam file="$(arg config_file_path)" command="load" />
  </node>

  <group if="$(arg enable_viewer)">
    <node pkg="smach_viewer" type="smach_viewer.py" name="smach_viewer_node" output="screen" args=""></node>
  </group>

</launch>